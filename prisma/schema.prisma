generator client {
  provider = "prisma-client"
  output   = "../src/generated/prisma"
}

datasource db {
  provider = "postgresql"
}

enum CenterType {
  ADULT
  PEDIATRIC
  NEONATAL
}

model EcmoCenter {
  id   String     @id @default(cuid(2))
  name String
  type CenterType

  city  String
  state String
  zip   String

  users User[]

  director   User   @relation(fields: [directorId], references: [id], name: "DirectorOfCenter")
  directorId String @unique

  coordinator   User   @relation(fields: [coordinatorId], references: [id], name: "CoordinatorOfCenter")
  coordinatorId String @unique

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}

model User {
  id          String  @id @default(cuid(2))
  name        String
  role        String // TODO: change to enum or relation
  image       String?
  description String?

  email String @unique

  center   EcmoCenter @relation(fields: [centerId], references: [id])
  centerId String

  directorRole     EcmoCenter? @relation("DirectorOfCenter")
  coordinatorRoloe EcmoCenter? @relation("CoordinatorOfCenter")

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}
